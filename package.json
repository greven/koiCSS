{
  "name": "koicss",
  "version": "0.1.0",
  "description": "Kind of CSS framework made with koi!",
  "main": "./scss/koi.scss",
  "style": "./dist/koi.min.css",
  "files": [
    "dist/*.css",
    "sass/**/*.scss"
  ],
  "keywords": [
    "css",
    "sass",
    "css-framework"
  ],
  "repository": "https://github.com/greven/koiCSS",
  "author": "Nuno <mail@nuno.site> Freire",
  "license": "MIT",
  "scripts": {
    "browser-sync": "browser-sync start --server --startPath \"_dev/index.html\" --files \"**/*\" --directory --no-notify --no-open",
    "build:dev": "sass -I node_modules -I scss --no-source-map _dev/assets/scss:_dev/assets/css && npm run postcss:dev",
    "build:sass:min": "sass -I node_modules -s compressed --no-source-map scss/koi.scss:dist/koi.min.css",
    "build:sass": "sass -I node_modules --no-source-map scss/koi.scss:dist/koi.css",
    "build": "npm run clean && concurrently npm:build:sass npm:build:sass:min && npm run postcss:prod",
    "clean": "rm -rf ./css",
    "dev": "concurrently npm:watch:dev npm:browser-sync",
    "lint:fix": "stylelint scss/**/*.scss --fix",
    "lint": "stylelint scss/**/*.scss",
    "postwatch:dev": "npm run postcss:dev",
    "postcss:dev": "postcss _dev/assets/css/*.css -c _dev/postcss.config.js --replace --no-map",
    "postcss:prod": "postcss dist/*.css -u autoprefixer --replace --no-map",
    "prebuild": "npm run lint:fix",
    "prestart": "cp scripts/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit",
    "start": "npm run dev",
    "watch:dev": "sass -I node_modules -I scss --no-source-map _dev/assets/scss:_dev/assets/css --watch --update",
    "watch": "npm run build:sass -- --watch --update"
  },
  "dependencies": {
    "modern-normalize": "^1.1.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "autoprefixer": "^10.4.4",
    "browser-sync": "^2.27.9",
    "concurrently": "^7.1.0",
    "cssnano": "^5.1.7",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.9",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1"
  }
}
