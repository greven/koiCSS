{
  "name": "koicss",
  "version": "0.1.0",
  "description": "Kind of CSS framework made with koi!",
  "main": "./dist/koi.min.css",
  "keywords": [
    "css",
    "sass",
    "css-framework",
    "sass-framework"
  ],
  "author": "Nuno <mail@nuno.site> Freire",
  "license": "MIT",
  "scripts": {
    "browser-sync": "browser-sync start --server --startPath \"_dev/index.html\" --files \"**/*\" --directory --no-notify --no-open",
    "build:dev": "sass --load-path=node_modules --load-path=scss --style=expanded --no-source-map _dev/assets/scss:_dev/assets/css && npm run postcss:dev",
    "build:sass:min": "sass --load-path=node_modules --style=compressed --no-source-map scss/koi.scss:css/koi.min.css",
    "build:sass": "sass --load-path=node_modules --style=expanded --no-source-map scss/koi.scss:css/koi.css",
    "build": "npm run clean && concurrently npm:build:* && npm run postcss:prod",
    "clean": "rm -rf ./css",
    "dev": "concurrently npm:watch:dev npm:browser-sync",
    "lint:fix": "stylelint scss/**/*.scss --fix",
    "lint": "stylelint scss/**/*.scss",
    "postcss:prod": "postcss css/*.css -u autoprefixer --replace --no-map",
    "postcss:dev": "postcss _dev/assets/css/*.css -c _dev/postcss.config.js --replace --no-map",
    "start": "npm run dev",
    "watch:dev": "npm run build:dev -- --watch --update"
  },
  "dependencies": {
    "modern-normalize": "^1.1.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "autoprefixer": "^10.4.4",
    "browser-sync": "^2.27.9",
    "concurrently": "^7.1.0",
    "cssnano": "^5.1.7",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.9",
    "stylelint": "^14.6.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1"
  }
}
