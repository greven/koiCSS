{
  "name": "koicss",
  "version": "0.1.0",
  "description": "Kind of CSS framework made with koi!",
  "main": "./scss/koi.scss",
  "style": "./dist/koi.min.css",
  "files": [
    "dist/*.css",
    "sass/**/*.scss"
  ],
  "keywords": [
    "css",
    "sass",
    "css-framework"
  ],
  "repository": "https://github.com/greven/koiCSS",
  "author": "Nuno <mail@nuno.site> Freire",
  "license": "MIT",
  "scripts": {
    "build:dev": "sass -I node_modules -I scss -I dist --no-source-map dev/assets/scss:dev/assets/css && npm run postcss:dev",
    "build:styles": "sass -I node_modules --no-source-map scss/koi-styles.scss:dist/koi.css scss/koi-utilities.scss:dist/koi-utilities.css",
    "build:styles:min": "sass -I node_modules -s compressed --no-source-map scss/koi-styles.scss:dist/koi.min.css scss/koi-utilities.scss:dist/koi-utilities.min.css",
    "build": "npm run clean && concurrently npm:build:styles npm:build:styles:min && concurrently npm:postcss:prod*",
    "clean": "rm -rf ./css",
    "dev": "concurrently npm:watch:dev npm:serve",
    "lint:fix": "stylelint scss/**/*.scss --fix",
    "lint": "stylelint scss/**/*.scss",
    "postwatch:dev": "npm run postcss:dev",
    "postcss:dev": "postcss dev/assets/css/*.css -c dev/postcss.config.js --replace --no-map",
    "postcss:prod": "postcss dist/koi.css dist/koi.utilities.css -u autoprefixer --replace --no-map",
    "postcss:prod:min": "postcss dist/koi.min.css dist/koi.utilities.min.css -u autoprefixer -u cssnano --replace --no-map",
    "prebuild": "npm run lint:fix",
    "prepare": "husky install",
    "serve": "live-server ./dev --mount=/dist:./dist --no-browser --no-css-inject",
    "start": "npm run dev",
    "watch:dev:main": "sass -I node_modules -I scss --no-source-map dev/assets/scss/main.scss:dev/assets/css/main.css --color --watch --update",
    "watch:dev:utils": "sass -I node_modules -I scss --no-source-map dev/assets/scss/utilities.scss:dev/assets/css/utilities.css --color --watch --update",
    "watch:dev": "concurrently npm:watch:dev:main npm:watch:dev:utils",
    "watch": "npm run build:styles -- --watch --update"
  },
  "devDependencies": {
    "@compodoc/live-server": "^1.2.3",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "autoprefixer": "^10.4.5",
    "concurrently": "^7.1.0",
    "cssnano": "^5.1.7",
    "husky": "^7.0.4",
    "postcss-cli": "^9.1.0",
    "postcss-preset-env": "^7.4.4",
    "sass": "^1.51.0",
    "stylelint": "^14.8.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-sass-guidelines": "^9.0.1"
  }
}
